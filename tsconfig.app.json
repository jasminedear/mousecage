{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",

    // 关键：让 .vue / import.meta.env 生效
    "types": ["vite/client"],

    // 关键：支持 @ 别名
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  // 关键：把 .vue / .d.ts 纳入类型检查
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],

  // 如果你暂时不想让单测参与类型检查，可以解除下一行注释
  // "exclude": ["src/__tests__/**"]
  "references": []
}
